@using Roulette.Controllers
@model Roulette.Models.HomeModel

<html>
<head>
    <link rel="stylesheet" href="~/css/materialize.css">
    <link rel="stylesheet" href="~/css/home.css">
    <meta name="steamid" content="@Context.Request.Cookies["SteamId"]"/>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="js/jquery-3.5.1.min.js"></script>


    <script src="js/materialize.js"></script>
    <script src="js/timer.js"></script>
    <script src="js/scriptLoader.js"></script>
</head>
<body>


<div class="container" style="margin-left: 8%;margin-top: 15px;">
    <div class="row">
        @{
            foreach (var item in  await DepositController.LoadInventory(Model.User.SteamID))
            {
                <div class="col s2" style="width:20%">
                    <div class="card-panel" id="@item.id">
                        <span> @item.Description.name</span>
                        <p style="margin-top:-1px;">@item.Description.exterior</p>
                        <img src="https://steamcommunity-a.akamaihd.net/economy/image/@item.Description.iconURL" style="width: 200px;height: 150px;">
                        <a class="waves-effect btn deposit-item-button" style="width: 100%;background-color: #ba554a !important;margin-top: 15px;">Deposit</a>
                    </div>
                </div>
            }
        }




    </div>
</div>


<script type="text/javascript" src="~/js/home.js"></script>
<script src="js/jquery-ui.js"></script>
</body>
</html>